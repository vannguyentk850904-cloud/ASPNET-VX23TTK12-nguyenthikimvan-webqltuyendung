@{
    ViewBag.Title = "Đăng nhập";
}

<div class="login-wrapper">
    <div class="login-card">
        <h2>Đăng nhập</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>


            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

            <p class="text-danger mt-3">@ViewBag.Error</p>
        }

        <p class="text-center mt-3">
            Chưa có tài khoản? <a href="@Url.Action("Register", "Account")" class="text-primary">Đăng ký ngay</a>
        </p>
    </div>
</div>

<style>
    /* --- Toàn trang --- */
    .login-wrapper {
        height: calc(100vh - 80px);
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f6f6fb;
    }

    /* --- Thẻ chứa form --- */
    .login-card {
        background-color: #fff;
        border-radius: 16px;
        padding: 35px 40px;
        width: 100%;
        max-width: 360px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    }

        /* --- Tiêu đề --- */
        .login-card h2 {
            color: #6f2cff;
            font-weight: 700;
            text-align: center;
            margin-bottom: 25px;
        }

    /* --- Nhóm input --- */
    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 500;
        display: block;
        margin-bottom: 6px;
        color: #333;
    }

    input.form-control {
        border-radius: 8px;
        background-color: #f3f2ff;
        border: 1px solid #dcd6ff;
        width: 100%;
        padding: 10px;
    }

        input.form-control:focus {
            border-color: #6f2cff;
            box-shadow: 0 0 0 2px rgba(111, 44, 255, 0.2);
        }

    

    /* --- Nút đăng nhập --- */
    .btn-primary {
        background-color: #6f2cff;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 10px 0;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #5a23cc;
        }

    .text-primary {
        color: #6f2cff !important;
    }

    /* --- Dòng đăng ký --- */
    .login-card p {
        font-size: 15px;
    }
</style>
