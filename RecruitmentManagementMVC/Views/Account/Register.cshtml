@model RecruitmentManagementMVC.Models.User
@{
    ViewBag.Title = "Đăng ký tài khoản";
}
<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center text-primary mb-4">Đăng ký</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label>Họ tên</label>
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
        </div>

        <div class="form-group mb-3">
            <label>Mật khẩu</label>
            @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group mb-3">
            <label>Vai trò</label>
            @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "User", "Recruiter", "Admin" }), "Chọn quyền", new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>

        <p class="text-danger mt-3">@ViewBag.Error</p>
    }
</div>
