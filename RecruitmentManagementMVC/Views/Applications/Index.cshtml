@model IEnumerable<RecruitmentManagementMVC.Models.Application>

@{
    ViewBag.Title = "Quản lý ứng tuyển";
}

<div class="container mt-4">
   

    <div class="bg-white shadow-lg p-4 rounded-bottom">
        <!-- Search & filters -->
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-4">
                <input type="text" name="searchString" value="@ViewBag.SearchString"
                       class="form-control" placeholder="Tìm theo ứng viên, vị trí..." />
            </div>

            <div class="col-md-3">
                <select name="jobFilter" class="form-select">
                    <option value="">-- Tất cả việc làm --</option>
                    @if (ViewBag.JobList != null)
                    {
                        foreach (var job in ViewBag.JobList as IEnumerable<string>)
                        {
                            <option value="@job" @(ViewBag.JobFilter == job ? "selected" : "")>@job</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-3">
                <select name="employerFilter" class="form-select">
                    <option value="">-- Tất cả nhà tuyển dụng --</option>
                    @if (ViewBag.EmployerList != null)
                    {
                        foreach (var emp in ViewBag.EmployerList as IEnumerable<string>)
                        {
                            <option value="@emp" @(ViewBag.EmployerFilter == emp ? "selected" : "")>@emp</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-50"><i class="bi bi-search"></i> Tìm</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary w-50"><i class="bi bi-x-circle"></i> Xóa</a>
            </div>
        </form>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Vị trí</th>
                        <th>Ứng viên</th>
                        <th>Email</th>
                        <th>Nhà tuyển dụng</th>
                        <th>Thư ứng tuyển</th>
                        <th>Ngày ứng tuyển</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">Không có dữ liệu ứng tuyển nào.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <!-- HIỂN THỊ TIÊU ĐỀ CÔNG VIỆC (an toàn null) -->
                                <td class="text-start">
                                    @(item.JobPost != null
                                        ? (item.JobPost.Title ?? "—")
                                        : "—")
                                </td>

                                <!-- ỨNG VIÊN -->
                                <td>@(item.User?.FullName ?? "—")</td>
                                <td>@(item.User?.Email ?? "—")</td>

                                <!-- NHÀ TUYỂN DỤNG (JobPost.User là owner) -->
                                <td>
                                    @(
                                        item.JobPost?.User != null
                                        ? (item.JobPost.User.FullName ?? "—")
                                        : "—"
                                    )
                                </td>

                                <!-- COVER LETTER (rút gọn) -->
                                <td class="text-start">
                                    @{
                                        var letter = item.CoverLetter ?? "";
                                        var shortLetter = letter.Length > 80 ? letter.Substring(0, 80) + "..." : letter;
                                    }
                                    @shortLetter
                                </td>

                                <!-- APPLIED AT (an toàn) -->
                                <td>@(item.AppliedAt?.ToString("dd/MM/yyyy HH:mm") ?? "—")</td>

                                <td class="text-center">
                                    <a href="@Url.Action("Details", "Applications", new { id = item.ApplicationId })" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                    <a href="@Url.Action("Delete", "Applications", new { id = item.ApplicationId })" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Bootstrap icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
