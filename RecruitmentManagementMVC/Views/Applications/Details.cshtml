@model RecruitmentManagementMVC.Models.Application

@{
    ViewBag.Title = "Chi tiết ứng tuyển";
}

<div class="container mt-4">
    <div class="bg-primary text-white rounded-top p-3 shadow-sm d-flex justify-content-between align-items-center">
        <h2 class="m-0">📄 Chi tiết ứng tuyển</h2>
        <a href="@Url.Action("Index")" class="btn btn-light fw-bold">⬅ Quay lại</a>
    </div>

    <div class="bg-white shadow-lg p-4 rounded-bottom">
        <dl class="row">
            <dt class="col-sm-3">Vị trí ứng tuyển</dt>
            <dd class="col-sm-9">@(Model.JobPost?.Title ?? "—")</dd>

            <dt class="col-sm-3">Ứng viên</dt>
            <dd class="col-sm-9">@(Model.User?.FullName ?? "—")</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@(Model.User?.Email ?? "—")</dd>

            <dt class="col-sm-3">Nhà tuyển dụng</dt>
            <dd class="col-sm-9">@(Model.JobPost?.User?.FullName ?? "—")</dd>

            <dt class="col-sm-3">Ngày ứng tuyển</dt>
            <dd class="col-sm-9">@(Model.AppliedAt?.ToString("dd/MM/yyyy HH:mm") ?? "—")</dd>

            <dt class="col-sm-3">Thư ứng tuyển</dt>
            <dd class="col-sm-9 text-break">@(Model.CoverLetter ?? "—")</dd>
        </dl>

        <div class="text-end mt-4">
            <a href="@Url.Action("Delete", new { id = Model.ApplicationId })" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xóa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
