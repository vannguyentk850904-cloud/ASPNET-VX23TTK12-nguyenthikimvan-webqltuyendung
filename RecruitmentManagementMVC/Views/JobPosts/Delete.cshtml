@model RecruitmentManagementMVC.Models.JobPost

@{
    ViewBag.Title = "Xóa tin tuyển dụng";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 85vh; background-color: #f8f9fc;">
    <div class="card shadow-lg p-5 text-center" style="width: 600px; border-radius: 20px;">
        <h2 class="text-danger fw-bold mb-3">
            <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Title
        </h2>
        <p class="mb-4">Bạn có chắc muốn xóa tin tuyển dụng này? Thao tác này không thể hoàn tác.</p>

        <div class="text-start mb-4">
            <dl class="row">
                <dt class="col-sm-4 fw-semibold text-secondary">Tiêu đề</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Title)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Mô tả</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Description)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Địa điểm</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Location)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Mức lương</dt>
                <dd class="col-sm-8">@String.Format("{0:N0} VND", Model.Salary)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Ngày tạo</dt>
                <dd class="col-sm-8">
                    @(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy") : "—")
                </dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Nhà tuyển dụng</dt>
                <dd class="col-sm-8">@(Model.User != null ? Model.User.FullName : "Không xác định")</dd>
            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a href="@Url.Action("Index", "JobPosts")" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div>
