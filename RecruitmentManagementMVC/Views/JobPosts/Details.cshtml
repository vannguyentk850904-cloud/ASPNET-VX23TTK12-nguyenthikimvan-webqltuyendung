@model RecruitmentManagementMVC.Models.JobPost

@{
    ViewBag.Title = "Chi tiết công việc";
    var role = Session["Role"] != null ? Session["Role"].ToString() : "";
    var userId = Session["UserId"] as int?;
    // fallback nếu ExpiryDate null thì lấy CreatedAt + 30 ngày
    DateTime? expiryDate = Model.ExpiryDate ?? (Model.CreatedAt?.AddDays(30));
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<div class="container mt-5">
    <h2 class="text-primary fw-bold mb-3">@Model.Title</h2>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3 fw-semibold">Địa điểm</dt>
            <dd class="col-sm-9">@Model.Location</dd>

            <dt class="col-sm-3 fw-semibold">Mức lương</dt>
            <dd class="col-sm-9">@string.Format("{0:N0} VNĐ", Model.Salary ?? 0)</dd>

            <dt class="col-sm-3 fw-semibold">Ngày đăng</dt>
            <dd class="col-sm-9">
                @(Model.CreatedAt is DateTime dt ? dt.ToString("dd/MM/yyyy") : "Không xác định")
            </dd>

            <dt class="col-sm-3 fw-semibold text-danger">Ngày hết hạn</dt>
            <dd class="col-sm-9 text-danger">
                @(expiryDate?.ToString("dd/MM/yyyy") ?? "Không xác định")
            </dd>

            <dt class="col-sm-3 fw-semibold">Nhà tuyển dụng</dt>
            <dd class="col-sm-9">
                @(Model.User != null ? Model.User.FullName : "Không xác định")
            </dd>
        </dl>

        <div class="mt-4">
            <a href="@Url.Action("Index", "JobPosts")" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>

            @if (role == "Candidate")
            {
                <a href="@Url.Action("Apply", "JobApplications", new { jobId = Model.JobId })"
                   class="btn btn-success">
                    <i class="bi bi-send"></i> Nộp đơn ứng tuyển
                </a>
            }
            else if ((role == "Recruiter" || role == "Employer") && userId == Model.EmployerId)
            {
                <a href="@Url.Action("Edit", "JobPosts", new { id = Model.JobId })"
                   class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Chỉnh sửa
                </a>
                <a href="@Url.Action("Delete", "JobPosts", new { id = Model.JobId })"
                   class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </a>
            }
        </div>
    </div>
</div>
