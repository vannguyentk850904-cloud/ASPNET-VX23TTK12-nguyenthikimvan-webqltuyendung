@model IEnumerable<RecruitmentManagementMVC.Models.User>

@{
    ViewBag.Title = "Quản lý người dùng";
    // Controller set ViewBag.SearchString, ViewBag.RoleFilter
    string currentSearch = (ViewBag.SearchString ?? "") as string;
    string currentRole = (ViewBag.RoleFilter ?? "") as string;
    var roles = new List<string> { "", "Admin", "Employer", "Candidate" }; // empty = tất cả
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white fw-bold" style="background-color: #6f42c1;">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="bi bi-people-fill me-2"></i> Quản lý người dùng</h3>
                <a href="@Url.Action("Create")" class="btn btn-light fw-semibold">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </a>
            </div>
        </div>

        <div class="card-body bg-light">
            <!-- Search & Filter form -->
            <form method="get" class="row g-3 align-items-center mb-4">
                <div class="col-md-5">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên hoặc email..."
                           value="@Html.Raw(HttpUtility.HtmlEncode(currentSearch))" />
                </div>

                <div class="col-md-3">
                    <select name="roleFilter" class="form-select">
                        <option value="">-- Tất cả vai trò --</option>
                        <option value="Admin" @(currentRole == "Admin" ? "selected" : "")>Admin</option>
                        <option value="Employer" @(currentRole == "Employer" ? "selected" : "")>Employer</option>
                        <option value="Candidate" @(currentRole == "Candidate" ? "selected" : "")>Candidate</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn" style="background-color:#6f42c1;color:white;">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Xóa lọc
                    </a>
                </div>
            </form>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle bg-white rounded-3 shadow-sm">
                    <thead class="table-light">
                        <tr class="fw-semibold">
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Mật khẩu</th>
                            <th>Vai trò</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model?.Any() ?? true)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="bi bi-exclamation-circle me-2"></i>Không tìm thấy người dùng phù hợp
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.FullName)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td><span class="text-muted">••••••</span></td>
                                    <td>
                                        @if (item.Role == "Admin")
                                        {
                                            <span class="badge bg-danger">Admin</span>
                                        }
                                        else if (item.Role == "Employer")
                                        {
                                            <span class="badge bg-warning text-dark">Employer</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Candidate</span>
                                        }
                                    </td>
                                    <td>
                                        @(item.CreatedAt.HasValue
                                            ? item.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                            : "—")
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="@Url.Action("Edit", new { id = item.UserId, searchString = currentSearch, roleFilter = currentRole })"
                                               class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            
                                            <a href="@Url.Action("Delete", new { id = item.UserId, searchString = currentSearch, roleFilter = currentRole })"
                                               class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
