@model RecruitmentManagementMVC.Models.User

@{
    ViewBag.Title = "Chỉnh sửa người dùng";
    string currentRole = Session["Role"] != null ? Session["Role"].ToString() : "";
    bool isAdmin = currentRole == "Admin";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <!-- Header -->
        <div class="card-header text-white fw-bold" style="background-color: #6f42c1;">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa người dùng
                </h3>

                @if (isAdmin)
                {
                    <a href="@Url.Action("Index")" class="btn btn-light fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Profile", "Users", new { id = Model.UserId })" class="btn btn-light fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                }
            </div>
        </div>

        <!-- Body -->
        <div class="card-body bg-light p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                @Html.HiddenFor(model => model.UserId)

                <div class="row g-3">
                    <!-- Họ và tên -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Họ và tên</label>
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ và tên..." } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>

                    <!-- Email -->
                    @if (isAdmin)
                    {
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email..." } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="text" class="form-control" value="@Model.Email" readonly />
                        </div>
                    }

                    <!-- Mật khẩu -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Mật khẩu</label>
                        @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mật khẩu..." } })
                        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                    </div>

                    <!-- Vai trò -->
                    @if (isAdmin)
                    {
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Vai trò</label>
                            @Html.DropDownListFor(model => model.Role,
                                new SelectList(new[] { "Admin", "Employer", "Candidate" }, Model.Role),
                                "-- Chọn vai trò --",
                                new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Vai trò</label>
                            <input type="text" class="form-control" value="@Model.Role" readonly />
                        </div>
                    }

                    <!-- Ngày tạo -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Ngày tạo</label>
                        @Html.TextBoxFor(model => model.CreatedAt,
                            Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("yyyy-MM-ddTHH:mm") : "",
                            new { @class = "form-control", type = "datetime-local", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>

                    @if (isAdmin)
                    {
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Hủy
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Profile", "Users", new { id = Model.UserId })" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Hủy
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
