@model RecruitmentManagementMVC.Models.User
@{
    ViewBag.Title = "Trang cá nhân";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white fw-bold" style="background-color:#6f42c1;">
            <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i> Trang cá nhân</h3>
        </div>

        <div class="card-body bg-light">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="avatar"
                         class="rounded-circle shadow-sm" width="150" height="150" />
                    <h4 class="mt-3 fw-bold">@Model.FullName</h4>
                    <span class="badge @(Model.Role == "Admin" ? "bg-danger" : Model.Role == "Employer" ? "bg-warning text-dark" : "bg-success")">
                        @Model.Role
                    </span>
                </div>

                <div class="col-md-8">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Mật khẩu:</th>
                                <td><span class="text-muted">••••••••</span></td>
                            </tr>
                            <tr>
                                <th>Ngày tạo:</th>
                                <td>@(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "—")</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", "Users", new { id = Model.UserId })" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
