@model RecruitmentManagementMVC.Models.User

@{
    ViewBag.Title = "Xóa người dùng";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <!-- Header -->
        <div class="card-header text-white fw-bold" style="background-color: #6f42c1;">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="bi bi-trash me-2"></i> Xóa người dùng
                </h3>
                <a href="@Url.Action("Index")" class="btn btn-light fw-semibold">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>

        <!-- Body -->
        <div class="card-body bg-light p-4">
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                <div>
                    <strong>Bạn có chắc muốn xóa người dùng này không?</strong><br />
                    Hành động này không thể hoàn tác.
                </div>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">
                    @if (Model.Role == "Admin")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else if (Model.Role == "Employer")
                    {
                        <span class="badge bg-warning text-dark">Employer</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Candidate</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">
                    @(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "—")
                </dd>
            </dl>

            @using (Html.BeginForm("Delete", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.UserId)

                <div class="text-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xác nhận xóa
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
